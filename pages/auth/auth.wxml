<view class="auth_container">
    <van-notice-bar
        color="#1989fa"
        background="#ecf9ff"
        left-icon="info-o"
        scrollable="{{ false }}"
        text="请注意：认证信息一经提交无法修改"
    />

    <view class="auth_card">
        <van-cell-group>
            <van-field
              label="真实姓名"
              placeholder="请输入真实姓名"
              value="{{ realName }}"
              disabled="{{ isDisabled }}"
              border="{{ false }}"
              bind:change="onRealNameChange"
            />
            <van-field
              label="学校"
              placeholder="选择学校"
              border="{{ false }}"
              value="{{ campusValue }}"
              readonly
              right-icon="arrow-down"
              bind:click-input="showPicker"
              disabled="{{ isDisabled }}"
              bind:click-icon="showPicker"
            />
            <van-field
              label="学号"
              placeholder="请输入学号"
              value="{{ studentId }}"
              border="{{ false }}"
              type="number"
              disabled="{{ isDisabled }}"
              bind:change="onStudentIdChange"
            />

            <van-popup show="{{ show }}" bind:click-overlay="onPickerClose"	position="bottom">
                <van-picker 
                    columns="{{ campus }}"
                    show-toolbar
                    title="选择学校"
                    bind:confirm="onPickerConfirm"
                    bind:cancel="onPickerClose"
                />
            </van-popup>
        </van-cell-group>
        <van-toast id="van-toast" />
    </view>

    <view class="auth_button">
        <van-button 
            type="info" 
            size="large"
            disabled="{{ isDisabled }}"
            round
            bind:click="authSubmit"
        >
            提交认证
        </van-button>
    </view>

</view>
