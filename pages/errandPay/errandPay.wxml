<view class="errandPay_container">

    <view class="errandPay_countdown">
        <van-count-down   bind:finish="countdownFinished" time="{{ Countdown }}" format="付款倒计时：HH 时 mm 分 ss 秒" />
    </view>
    
    <view class="errandPay_receiver">
        <view class="errandPay_icon">
            <van-icon size="70rpx" name="https://yoozki-blog-1251326302.cos.ap-guangzhou.myqcloud.com/campussupport/icon/receiver.png" />
        </view>
        <view class="errandPay_receiver_info" >
            <view class="errandPay_receiver_name" >
                {{ receiverName }}
            </view>
            <view class="errandPay_receiver_phone" >
                {{ receiverPhone }}
            </view>
        </view>
    </view>

    <view class="errandPay_info">
    <view class="errandPay_tag">
        <van-tag color="#7232dd" plain>{{ campusName }}</van-tag>
    </view>
    <view class="errandPay_tag" >
        <van-tag color="#f2826a" plain>{{ tagName }}</van-tag>
    </view>

        <view class="errandPay_info_title">
            <text >任务标题：</text>
            <text >{{ title }}</text>
        </view>
        <view class="errandPay_info_item">
            <text >目标地址：</text>
            <text >{{ targetAddress }}</text>
        </view>
        <view class="errandPay_info_item">
            <text >送达地址：</text>
            <text >{{ deliveryAddress }}</text>
        </view>
        <view class="errandPay_info_item">
            <text >送达时间：</text>
            <text >{{ deliveryTime }}</text>
        </view>
        <view class="errandPay_info_detail">
            <text >任务细节：</text>
            <text >{{ detail }}</text>
        </view>
    </view>




    <van-submit-bar
        class="submitButton"
        label="赏金："
        price="{{ reward * 100 }}"
        button-text="提交订单"
        bind:submit="onSubmit"
    />
</view>

<van-dialog id="van-dialog" />
